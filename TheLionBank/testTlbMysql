create table TLB_USER_DETAILS_MOD (TLB_USERID int NOT NULL, TLB_USERNAME varchar(50) NOT NULL, TLB_PASSWORD varchar(50) NOT NULL, TLB_EMAIL varchar(50) NOT NULL, TLB_PHONE_NUMBER big);
desc TLB_USER_DETAILS;
insert into TLB_USER_DETAILS VALUES (1234,'arpit','arpit');
select * from TLB_USER_DETAILS;
select * from TLB_USER_DETAILS where TLB_USERNAME = 'arpit' and TLB_PASSWORD = 'arpit';



create table TLB_TOPIC_DETAILS;
drop table TLB_TOPIC_DETAILS;
CREATE TABLE IF NOT EXISTS `TLB_TOPIC_DETAILS` (
  `TLB_TOPIC_ID` int(11) NOT NULL AUTO_INCREMENT,
  `TLB_TOPIC_NAME` varchar(60) NOT NULL,
  `TLB_TOPIC_DES` varchar(80) NOT NULL,
  `TLB_TOPIC_CREATEDBY` int(11) NOT NULL references TLB_USER_DETAILS(`TLB_USER_ID`),
  PRIMARY KEY (`TLB_TOPIC_ID`)
) ENGINE=InnoDB  DEFAULT CHARSET=latin1 AUTO_INCREMENT=1000 ;
desc TLB_USER_DETAILS;

INSERT INTO `TLB_TOPIC_DETAILS` ( `TLB_TOPIC_NAME`,
`TLB_TOPIC_DES`, `TLB_TOPIC_CREATEDBY`)
VALUES ('admin', 'ABCD', 'admin');

select * from TLB_TOPIC_DETAILS;
select * from TLB_TOPIC_DETAILS where TLB_TOPIC_NAME = "admin";
truncate table TLB_TOPIC_DETAILS;

create table TLB_COMMENT_DETAILS;
drop table TLB_COMMENT_DETAILS;
CREATE TABLE IF NOT EXISTS `TLB_COMMENT_DETAILS` (
  `TLB_COMMENT_ID` int(11) NOT NULL AUTO_INCREMENT,
  `TLB_COMMENT_DETAIL` varchar(80) NOT NULL,
  `TLB_COMMENTEDBY` int(11) NOT NULL references TLB_USER_DETAILS(`TLB_USER_ID`),
  `TLB_TOPIC_ID` int(11) NOT NULL references TLB_TOPIC_DETAILS(`TLB_TOPIC_ID`),
  PRIMARY KEY (`TLB_COMMENT_ID`)
) ENGINE=InnoDB  DEFAULT CHARSET=latin1 AUTO_INCREMENT=1000 ;
desc TLB_COMMENT_DETAILS;

INSERT INTO `TLB_COMMENT_DETAILS` ( `TLB_COMMENT_NAME`,
`TLB_COMMENT_DES`, `TLB_COMMENT_CREATEDBY`)
VALUES ('HELLO', 'HELLO FRIENDS', 'admin');

select * from TLB_COMMENT_DETAILS;
select * from TLB_COMMENT_DETAILS where TLB_TOPIC_NAME = "admin";
truncate table TLB_COMMENT_DETAILS;